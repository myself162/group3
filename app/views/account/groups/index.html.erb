<div class="span12">
  <h2> My Groups </h2>

  <table class="table">
    <thead>
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Description </td>
        <td> Post Count </td>
        <td> Last Update </td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(group.title, group_path(group)) %> </td>
        <td> <%= group.description %> </td>
        <td> <%= group.posts.count %> </td>
        <td> <%= group.updated_at %> </td>
        <td>
          <% if current_user && group.editable_by?(current_user) %> 
          <%= link_to("Edit", edit_group_path(group), :class => "btn btn-mini") %>
          <%= link_to("Delete", group_path(group), :class => "btn btn-mini", :method => :delete, :confirm => "Are you kidding?") %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>